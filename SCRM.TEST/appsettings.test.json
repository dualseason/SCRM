{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "InMemory"
  },
  "JwtSettings": {
    "SecretKey": "TestSecretKey123456789TestSecretKey123456789",
    "Issuer": "SCRM.Test",
    "Audience": "SCRM.Test.Clients",
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7
  },
  "RateLimiting": {
    "EnableRateLimit": true,
    "DefaultLimit": 1000,
    "DefaultWindowMinutes": 1,
    "EnableEndpointRateLimit": true,
    "QuotaExceededResponse": {
      "StatusCode": 429,
      "Message": "API calls quota exceeded! Maximum {0} requests per {1} minute(s). Please try again later."
    }
  },
  "HealthChecks": {
    "EnableHealthChecks": true,
    "HealthCheckUrl": "/health",
    "DetailedHealthCheckUrl": "/health/detailed"
  }
}