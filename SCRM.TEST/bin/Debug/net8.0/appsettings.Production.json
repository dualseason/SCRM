{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore.Update": "Warning",
      "SCRM": "Information"
    },
    "Console": {
      "IncludeScopes": false
    },
    "File": {
      "Path": "logs/scrm-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30,
      "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
    }
  },
  "AllowedHosts": "yourdomain.com,api.yourdomain.com",
  "ConnectionStrings": {
    "DefaultConnection": "Host=your-postgres-host;Database=SCRM;Username=postgres;Password=${DB_PASSWORD};Port=5432;SSL Mode=Require;Trust Server Certificate=true"
  },
  "Redis": {
    "ConnectionString": "${REDIS_HOST}:6379",
    "Password": "${REDIS_PASSWORD}",
    "Database": 0,
    "InstanceName": "SCRM",
    "KeyPrefix": "SCRM:",
    "ConnectRetry": 3,
    "ConnectTimeout": 10000,
    "SyncTimeout": 10000,
    "AbortOnConnectFail": false,
    "Ssl": true,
    "AllowAdmin": true
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "SCRM",
    "Audience": "SCRM.Production.Clients",
    "ExpiryMinutes": 120,
    "RefreshTokenExpiryDays": 30
  },
  "RocketMQ": {
    "NameServer": "${ROCKETMQ_NAMESERVER}",
    "ProducerGroup": "SCRM_Producer_Group",
    "ConsumerGroup": "SCRM_Consumer_Group",
    "Topics": [
      "scrm_user_events",
      "scrm_order_events",
      "scrm_notification_events"
    ]
  },
  "RateLimiting": {
    "EnableRateLimit": true,
    "DefaultLimit": 100,
    "DefaultWindowMinutes": 1,
    "EnableEndpointRateLimit": true,
    "QuotaExceededResponse": {
      "StatusCode": 429,
      "Message": "API calls quota exceeded! Maximum {0} requests per {1} minute(s). Please try again later."
    }
  },
  "Security": {
    "EnableCsp": true,
    "EnableXssProtection": true,
    "EnableContentTypeNosniff": true,
    "EnableXFrameOptions": true,
    "EnableHsts": true,
    "MaxAge": 31536000,
    "IncludeSubDomains": true
  },
  "HealthChecks": {
    "EnableHealthChecks": true,
    "HealthCheckUrl": "/health",
    "DetailedHealthCheckUrl": "/health/detailed"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://yourdomain.com",
      "https://app.yourdomain.com",
      "https://admin.yourdomain.com"
    ],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["Content-Type", "Authorization", "X-Requested-With"],
    "AllowCredentials": true
  },
  "Swagger": {
    "Enabled": false,
    "Title": "SCRM API",
    "Version": "v1",
    "Description": "Social Customer Relationship Management API"
  },
  "Cache": {
    "DefaultExpirationMinutes": 30,
    "EnableCacheStatistics": true
  },
  "Monitoring": {
    "EnableMetrics": true,
    "EnableTracing": true,
    "MetricsPath": "/metrics"
  }
}