{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "SCRM": "Debug"
    }
  },
  "AllowedHosts": "staging.yourdomain.com,api.staging.yourdomain.com",
  "ConnectionStrings": {
    "DefaultConnection": "Host=staging-postgres-host;Database=SCRM_Staging;Username=postgres;Password=${STAGING_DB_PASSWORD}"
  },
  "Redis": {
    "ConnectionString": "staging-redis:6379",
    "Database": 1,
    "InstanceName": "SCRM-Staging",
    "KeyPrefix": "SCRM:STAGING:"
  },
  "JwtSettings": {
    "SecretKey": "${STAGING_JWT_SECRET_KEY}",
    "Issuer": "SCRM-Staging",
    "Audience": "SCRM.Staging.Clients",
    "ExpiryMinutes": 240,
    "RefreshTokenExpiryDays": 14
  },
  "Swagger": {
    "Enabled": true
  },
  "HealthChecks": {
    "EnableHealthChecks": true
  }
}